# Free Hosting Environment Variables
# Copy this to .env for free hosting deployment

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=kidoo-backend.onrender.com,your-custom-domain.com

# Database Configuration (will be set automatically by hosting platform)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Settings - Update with your frontend URL
CORS_ALLOWED_ORIGINS=https://kidoo-frontend.onrender.com,https://your-custom-domain.com

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@kidoopreschool.com
